<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd		
	">

	<util:list id="converters">
		<!-- 
			Add your own converters using entries of the following form: 
			<bean class="converters.Class1ToClass2" /> --> 
		
                <bean class="es.us.isa.ideas.app.converters.ResearcherToString"/>
                <bean class="es.us.isa.ideas.app.converters.StringToResearcher"/>
                <bean class="es.us.isa.ideas.app.converters.UserAccountToString"/>
                <bean class="es.us.isa.ideas.app.converters.StringToUserAccount"/>
                <bean class="es.us.isa.ideas.app.converters.AuthorityToString"/>
                <bean class="es.us.isa.ideas.app.converters.StringToAuthority"/>
                                
	</util:list>

</beans>